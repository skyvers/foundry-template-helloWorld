<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://www.skyve.org/xml/view" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="edit" title="New Document" xsi:schemaLocation="http://www.skyve.org/xml/view ../../../../schemas/view.xsd">
    <form responsiveWidth="12" border="true">
        <column responsiveWidth="2"/>
        <column responsiveWidth="8"/>
        <column/>
        <row>
        	<item>
        		<spacer/>
        	</item>
        	<item>
        		<blurb>
        			<![CDATA[
        				<strong>Welcome!
        						<br/>
        						Enter some text into the <em>Text to Echo</em> field below and click the <em>Echo Text</em> button to copy your text into the "Echoed Text" field.
        				</strong>
        			]]>
        		</blurb>
        	</item>
        </row>
        <row>
            <item>
                <default binding="textToEcho"/>
            </item>
        </row>
        <row>
        	<item>
        		<spacer/>
        	</item>
        	<item>
        		<button action="EchoText" pixelWidth="150"/>
        	</item>
        </row>
        <row>
        	<item>
        		<textField binding="echoedText" disabled="true"/>
        	</item>
        </row>
    </form>
    <actions>
        <action className="EchoText" displayName="Echo Text" inActionPanel="false"/>
    </actions>
    <newParameters/>
</view>
